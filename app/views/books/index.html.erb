<p id="notice"><%= notice %></p>

<p class="lead">All Books</p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Isbn</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>

  <tbody>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= book.author %></td>
      <td><%= book.isbn %></td>
      <% if book.is_borrowed %>
      <td><span class="label label-danger">Checked out</span></td>
      <% else %>
      <td><span class="label label-success">Available</span></td>
      <%end%>
      <td><%= link_to 'Show', book, :class => "btn btn-primary", :style => "color: #ffffff" %></td>
      <%if @current_user.is_admin? %>
      <td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning", :style => "color: #ffffff" %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "color: #ffffff" %></td>
      <%end%>
      <%if book.is_borrowed %>
      <% if book.user_id == @current_user.id %>
      <td><%= link_to 'Return', return_book_path(:id => book.id), :class => "btn btn-warning", :style => "color: #ffffff"%></td>
      <%else%>
      <td><%= link_to 'Request', request_book_path(:id => book.id), :class => "btn btn-warning", :style => "color: #ffffff"%></td>
      <%end%>
      <%else%>
      <td><%=link_to 'Borrow', borrow_book_path, :class => "btn btn-success", :style => "color: #ffffff"%></td>
      <%end%>
      <%end%>
    </tr>
  </tbody>
</table>

<br>
<br><br><br><br>
<%if @current_user.is_admin %>
<%= link_to 'Add Book', new_book_path, :class => "btn btn-success", :style => "color: #ffffff" %>
<% end %>
