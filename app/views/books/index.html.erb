<p id="notice"><%= notice %></p>

<p class="lead">All Books</p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Borrowed?</th>
      <th>Present in Library?</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= book.author %></td>
      <td><%= book.isbn %></td>
      <td><%= book.is_borrowed %></td>
      <td><%= !book.is_deleted %></td>
      <td><%= link_to 'Show', book, :class => "btn btn-info", :style => "color: #ffffff" %></td>
      <%if @current_user.is_admin%>
      <td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning", :style => "color: #ffffff" %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "color: #ffffff" %></td>
      <% end %>
      <% if !book.is_borrowed %>
      <!-- <td><%= link_to 'Request', request_book_path(:id => book.id), :class => "btn btn-info", :style => "color: #ffffff"%></td>
      <% else %> -->
      <td><%=link_to 'Borrow', borrow_book_path(:id => book.id), :class => "btn btn-success", :style => "color: #ffffff"%></td>
      <%end%>
    </tr> 
    <% end %>
  </tbody>
</table>

<br>
<br><br><br><br>
<%if @current_user.is_admin %>
<%= link_to 'Add Book', new_book_path, :class => "btn btn-success", :style => "color: #ffffff" %>
<% end %>
