<% if @current_user.is_admin? %>
<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<%else%>
<blockquote>
  <p class="text-danger">You are not authorized to view this page!</p>
</blockquote>
<% end %>
